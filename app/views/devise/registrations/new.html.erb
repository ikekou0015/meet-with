  <div class="container mt-5 bg-light">
         <h1>会員新規登録</h1>
<%= form_with model: @user, url: user_registration_path, local: true do |f| %>

  <div class="form-row mt-5">
    <div class="form-group col-md-6">
      <label for="inputnickname">ニックネーム</label><span class="badge badge-danger">必須</span>
      <%= f.text_field :nickname, class:"form-control", id:"inputnickname", placeholder:"例) meet太郎" %>
    </div>
    <div class="form-group col-md-6">
      <label for="inputEmail">Eメール</label><span class="badge badge-danger">必須</span>
      <%= f.email_field :email, class:"form-control", id:"inputemail", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword">パスワード</label><span class="badge badge-danger">必須</span>
      <%= f.password_field :password, class:"form-control", id:"inputpassword", placeholder:"6文字以上の半角英数字" %>
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword-confirmation">確認用パスワード</label><span class="badge badge-danger">必須</span>
      <%= f.password_field :password_confirmation, class:"form-control", id:"inputpassword-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
  </div>
    <div class="form-group col-md-2">
      <label for="inputgender">性別</label><span class="badge badge-danger">必須</span>
      <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"form-control", id:"inputgender"}) %>
    </div>
  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="gridCheck">
      <label class="form-check-label" for="gridCheck">
        Check me out
      </label>
    </div>
  </div>
  <%= f.submit "会員登録" ,class:"btn btn-primary col-4" %>
  </div>
<% end %>
</div>






