 <div class="container mt-5 mb-5 bg-light">
 <h1>ログイン画面</h1>
<%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'registration-main', local: true do |f| %>
   <div class="form-area mt-5">
  <div class="form-group col-6 ">
    <label for="exampleInputEmail1">Eメールアドレス</label><span class="badge badge-danger">必須</span>
    <%= f.email_field :email, class:"form-control", id:"exampleInputEmail", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else</small>
  </div>
  <div class="form-group col-6">
    <label for="exampleInputPassword">パスワード</label><span class="badge badge-danger">必須</span>
    <%= f.password_field :password, class:"form-control", id:"exampleInputPassword", placeholder:"" %>
  </div>
  <div class="form-group form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">Check me out</label>
  </div>
  <%= f.submit "ログイン" ,class:"btn btn-primary col-3" %>
</div>

<% end %>
</div>

<%= render "shared/footer"%> 