   <div class="container  mt-5 mb-5 bg-light">
   <div>
      <h1>つぶやき一覧<h1>
   </div>
   
   <div class="form  mt-5">
 <%= form_with model: @meet_with, url: meet_withs_path, local: :ture do |f| %>
    <div class="form-group col-6">
    <label for="Textarea">コメント</label>
    <%= f.text_area :text, class:"form-control", id:"Textarea"%>
   </div>
   <%= f.submit "つぶやく", class:"btn btn-success mx-auto col-4" %>
 <% end %>
   </div>
   </div>
  <div class="container  mt-5 mb-5 bg-light">
  <% @meet_withs.reverse_each do |meet_with| %>
  <div class="media shadow-sm p-1 mb-5 bg-white rounded">
   <%= link_to image_tag(meet_with.user.image,class:"rounded d-block col-5 m-1 rounded-circle"), user_path(meet_with.user.id) %>
  <div class="media-body">
    <h5 class="mt-2"><%= meet_with.user.nickname %></h5>
    <%= meet_with.text %>
    <% if user_signed_in? && current_user.id == meet_with.user_id %>
    <%= link_to 'つぶやきを削除する', meet_with_path(meet_with.id), method: :delete, class:"badge badge-danger ml-5 mt-3" %>
    <% end %>
  </div>
</div>
  <% end %>
</div>
   <%= render "shared/footer"%> 